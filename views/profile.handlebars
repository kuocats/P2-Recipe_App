<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Upload your favorite recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">Recipe name:</label>
        <input class="form-input" type="text" id="recipe-name" name="recipe-name" />
      </div>
      <div class="form-group">
        <label for="recipe-ingredients">Ingredients:</label>
        <input class="form-input" type="text" id="recipe-ingredients" name="recipe-ingredients" />
      </div>
      <div class="form-group">
        <label for="recipe-directions">Directions:</label>
        <textarea class="form-input" id="recipe-directions" name="recipe-directions"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if recipe.length}}
  <div class="col-md-6 project-list">
    <h3>Your Recipes:</h3>

    {{#each recipe as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{recipe.id}}">{{recipe.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>